{% extends 'base.jinja2' %}

{% block body %}

<h1>Welcome to your blog.</h1>
<h2>Posts</h2>

<ul>
    {% for post_id, post in posts.items(): %}
        <li><a href="{{ url_for('post', post_id=post_id) }}">{{ post['title'] }}</a></li>
    {% endfor %}
</ul>

<a href="/post/form">Create new post</a>
<a href="{{ url_for('form') }}">Create new post</a>

{% endblock %}
